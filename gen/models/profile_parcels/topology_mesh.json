{
  "request": {
      "$schema": "http://json-schema.org/draft/2019-09/schema",
      "$id": "https://cisco.com/schema/profileparcel/sdwan/topology/mesh/post/request_schema.json",
      "title": "Post request for policy Mesh feature",
      "description": "Post request for policy Mesh feature",
      "type": "object",
      "properties": {
          "name": {
              "type": "string",
              "pattern": "^[^&<>! \"]+$",
              "minLength": 1,
              "maxLength": 128
          },
          "description": {
              "type": "string"
          },
          "data": {
              "type": "object",
              "properties": {
                  "target": {
                      "description": "Target Vpn",
                      "type": "object",
                      "properties": {
                          "vpn": {
                              "type": "object",
                              "oneOf": [
                                  {
                                      "properties": {
                                          "optionType": {
                                              "type": "string",
                                              "enum": [
                                                  "global"
                                              ]
                                          },
                                          "value": {
                                              "type": "array",
                                              "minItems": 1,
                                              "uniqueItems": true,
                                              "items": {
                                                  "type": "string"
                                              }
                                          }
                                      },
                                      "required": [
                                          "optionType",
                                          "value"
                                      ],
                                      "additionalProperties": false
                                  }
                              ]
                          }
                      },
                      "required": [
                          "vpn"
                      ]
                  },
                  "sites": {
                      "type": "object",
                      "oneOf": [
                          {
                              "properties": {
                                  "optionType": {
                                      "type": "string",
                                      "enum": [
                                          "global"
                                      ]
                                  },
                                  "value": {
                                      "type": "array",
                                      "minItems": 1,
                                      "uniqueItems": true,
                                      "items": {
                                          "type": "string"
                                      }
                                  }
                              },
                              "required": [
                                  "optionType",
                                  "value"
                              ],
                              "additionalProperties": false
                          }
                      ]
                  }
              },
              "required": [
                  "target",
                  "sites"
              ],
              "additionalProperties": false
          }
      },
      "metadata": {
          "supportedDeviceTypes": [
              "vsmart"
          ]
      },
      "documentation": {
          "description": "This is the documentation for POST request schema for [parcelType] profile parcel",
          "details-1": "variable name should be present with given format as specified in schema if optionType value is variable",
          "details-2": "variable name should not be present if optionType value is NOT variable",
          "details-3": "when option Type is global,  value should be present with given format/restrictions as specified in schema",
          "details-4": "when option Type is default, value should be present with given default value as specified in schema",
          "examples": [
              {
                  "name": "mesh1",
                  "data": {
                      "target": {
                          "vpn": {
                              "optionType": "global",
                              "value": [
                                  "Guest",
                                  "Corporate"
                              ]
                          }
                      },
                      "sites": {
                          "optionType": "global",
                          "value": [
                              "site_100",
                              "site_200",
                              "site_300",
                              "site_400"
                          ]
                      }
                  }
              }
          ]
      },
      "required": [
          "data"
      ],
      "not": {
          "required": [
              "metadata",
              "documentation"
          ]
      },
      "additionalProperties": false
  }
}
